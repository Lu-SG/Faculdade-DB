package PDV;

/**
 *
 * @author LucasSilvaGarcia
 */
public class Compra {

    public Compra() {
    }
    
    private float ValorFinal;
    private float ValorParcial;
    private int OpcaoPagamento;
    
    public void getValorFinal(float ValorFinal) {
        this.ValorFinal = ValorFinal;
    }

    public void getValorParcial(float ValorParcial){
        this.ValorParcial = ValorParcial;
    }
    
    public void getOpcaoPagamento(Integer OpcaoPagamento) {
        this.OpcaoPagamento = OpcaoPagamento;
    }
    
    public float setValorFinal(){
        return ValorFinal;
    }
    
    public float setValorParcial(){
        return ValorParcial;
    }
    
    public int setOpcaoPagamento(){
        return OpcaoPagamento;
    }
    
    
    
}
